@model MyWebSite.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<!-- Error Section -->
<section class="py-5 bg-light">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="text-center">
                    <h1 class="display-1 fw-bolder text-danger">500</h1>
                    <p class="lead fw-normal text-muted mb-4">Oops! Something went wrong.</p>
                    <p class="text-muted mb-4">We're sorry, an error occurred. Please try again later.</p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="small text-muted">
                            Request ID: <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <a class="btn btn-primary btn-lg px-4 me-sm-3" href="@Url.Action("Index", "Home")">
                        <i class="bi bi-house-door"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

