@model MyWebSite.Core.Entities.Skill
@using MyWebSite.Core.Enums

@{
    ViewData["Title"] = "Skill Details";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Skill Details</h1>
    <a href="@Url.Action("Index", "Skills", new { area = "Admin" })" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">
                @if (Model.Category == SkillCategory.ProfessionalSkills)
                {
                    <span class="badge badge-primary">Professional Skills</span>
                }
                else
                {
                    <span class="badge badge-success">Languages</span>
                }
            </dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Display Order</dt>
            <dd class="col-sm-9">@Model.DisplayOrder</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</dd>

            @if (Model.UpdatedDate.HasValue)
            {
                <dt class="col-sm-3">Updated Date</dt>
                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd MMMM yyyy HH:mm")</dd>
            }
        </dl>

        <div class="mt-4">
            <a href="@Url.Action("Edit", "Skills", new { area = "Admin", id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Delete", "Skills", new { area = "Admin", id = Model.Id })" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
</div>

