@model IEnumerable<MyWebSite.Core.Entities.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Projects</h1>
    <a href="@Url.Action("Create", "Projects", new { area = "Admin" })" class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Create New Project
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Technologies</th>
                        <th>Featured</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var project in Model)
                        {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(project.ImageUrl))
                                {
                                    <img src="@project.ImageUrl" alt="@project.Title" style="width: 80px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@project.Title</td>
                            <td>@(project.Description.Length > 50 ? project.Description.Substring(0, 50) + "..." : project.Description)</td>
                            <td>@project.Technologies</td>
                            <td>
                                @if (project.IsFeatured)
                                {
                                    <span class="badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No</span>
                                }
                            </td>
                            <td>@project.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a href="@Url.Action("Details", "Projects", new { area = "Admin", id = project.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Projects", new { area = "Admin", id = project.Id })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Projects", new { area = "Admin", id = project.Id })" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No projects found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>