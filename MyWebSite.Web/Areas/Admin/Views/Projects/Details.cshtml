@model MyWebSite.Core.Entities.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Project Details</h1>
    <a href="@Url.Action("Index", "Projects", new { area = "Admin" })" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Technologies</dt>
            <dd class="col-sm-9">@(Model.Technologies ?? "N/A")</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px; max-height: 200px; object-fit: cover;" class="img-thumbnail" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>

            <dt class="col-sm-3">GitHub URL</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.GitHubUrl))
                {
                    <a href="@Model.GitHubUrl" target="_blank">@Model.GitHubUrl</a>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </dd>

            <dt class="col-sm-3">Live URL</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.LiveUrl))
                {
                    <a href="@Model.LiveUrl" target="_blank">@Model.LiveUrl</a>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </dd>

            <dt class="col-sm-3">Featured</dt>
            <dd class="col-sm-9">
                @if (Model.IsFeatured)
                {
                    <span class="badge badge-success">Yes</span>
                }
                else
                {
                    <span class="badge badge-secondary">No</span>
                }
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</dd>

            @if (Model.UpdatedDate.HasValue)
            {
                <dt class="col-sm-3">Updated Date</dt>
                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd MMMM yyyy HH:mm")</dd>
            }
        </dl>

        <div class="mt-4">
            <a href="@Url.Action("Edit", "Projects", new { area = "Admin", id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Delete", "Projects", new { area = "Admin", id = Model.Id })" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
</div>

