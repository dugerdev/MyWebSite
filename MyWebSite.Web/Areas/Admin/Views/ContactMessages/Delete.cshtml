@model MyWebSite.Core.Entities.ContactMessage

@{
    ViewData["Title"] = "Delete Message";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Delete Message</h1>
    <a href="@Url.Action("Index", "ContactMessages", new { area = "Admin" })" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Are you sure you want to delete this message?</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">From</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.Subject</dd>

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">@(Model.Message.Length > 100 ? Model.Message.Substring(0, 100) + "..." : Model.Message)</dd>

            <dt class="col-sm-3">Received At</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a href="@Url.Action("Index", "ContactMessages", new { area = "Admin" })" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

