@model MyWebSite.Core.Entities.AboutMe

@{
    ViewData["Title"] = "Edit About Me";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit About Me Information</h1>
    <a href="@Url.Action("Index", "AboutMe", new { area = "Admin" })" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="e.g., Full Stack Developer" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" placeholder="e.g., My name is John Doe and I help brands grow." />
                <small class="form-text text-muted">Brief description shown on the homepage</small>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullDescription" class="control-label"></label>
                <textarea asp-for="FullDescription" class="form-control" rows="6" placeholder="Full about me description..."></textarea>
                <span asp-validation-for="FullDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TwitterUrl" class="control-label"></label>
                <input asp-for="TwitterUrl" class="form-control" type="url" placeholder="https://twitter.com/yourusername" />
                <small class="form-text text-muted">Optional: Your Twitter profile URL</small>
                <span asp-validation-for="TwitterUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LinkedInUrl" class="control-label"></label>
                <input asp-for="LinkedInUrl" class="form-control" type="url" placeholder="https://linkedin.com/in/yourusername" />
                <small class="form-text text-muted">Optional: Your LinkedIn profile URL</small>
                <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GitHubUrl" class="control-label"></label>
                <input asp-for="GitHubUrl" class="form-control" type="url" placeholder="https://github.com/yourusername" />
                <small class="form-text text-muted">Optional: Your GitHub profile URL</small>
                <span asp-validation-for="GitHubUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update About Me
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}