@model MyWebSite.Core.Entities.AboutMe

@{
    ViewData["Title"] = "About Me";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">About Me</h1>
    <a href="@Url.Action("Edit", "AboutMe", new { area = "Admin", id = Model.Id })" class="btn btn-primary btn-sm">
        <i class="fas fa-edit"></i> Edit About Me
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About Me Information</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Short Description:</dt>
            <dd class="col-sm-9">@Model.ShortDescription</dd>

            <dt class="col-sm-3">Full Description:</dt>
            <dd class="col-sm-9">@Html.Raw(Model.FullDescription.Replace("\n", "<br />"))</dd>

            <dt class="col-sm-3">Twitter URL:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.TwitterUrl))
                {
                    <a href="@Model.TwitterUrl" target="_blank">@Model.TwitterUrl</a>
                }
                else
                {
                    <span class="text-muted">Not set</span>
                }
            </dd>

            <dt class="col-sm-3">LinkedIn URL:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
                {
                    <a href="@Model.LinkedInUrl" target="_blank">@Model.LinkedInUrl</a>
                }
                else
                {
                    <span class="text-muted">Not set</span>
                }
            </dd>

            <dt class="col-sm-3">GitHub URL:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.GitHubUrl))
                {
                    <a href="@Model.GitHubUrl" target="_blank">@Model.GitHubUrl</a>
                }
                else
                {
                    <span class="text-muted">Not set</span>
                }
            </dd>

            <dt class="col-sm-3">Created At:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</dd>

            @if (Model.UpdatedDate.HasValue)
            {
                <dt class="col-sm-3">Last Updated:</dt>
                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd MMMM yyyy HH:mm")</dd>
            }
        </dl>

        <div class="mt-4">
            <a href="@Url.Action("Edit", "AboutMe", new { area = "Admin", id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Delete", "AboutMe", new { area = "Admin", id = Model.Id })" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
</div>