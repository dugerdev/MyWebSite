@model MyWebSite.Core.Entities.AboutMe

@{
    ViewData["Title"] = "Delete About Me";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Delete About Me Information</h1>
    <a href="@Url.Action("Index", "AboutMe", new { area = "Admin" })" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">Warning: Are you sure you want to delete this?</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Warning!</strong> This action cannot be undone. The About Me information will be permanently deleted.
        </div>

        <dl class="row">
            <dt class="col-sm-3">Title:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Short Description:</dt>
            <dd class="col-sm-9">@Model.ShortDescription</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Yes, Delete It
                </button>
                <a href="@Url.Action("Index", "AboutMe", new { area = "Admin" })" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>