@model IEnumerable<MyWebSite.Core.Entities.ResumeItem>
@using MyWebSite.Core.Enums

@{
    ViewData["Title"] = "Resume Items";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Resume Items</h1>
    <a href="@Url.Action("Create", "ResumeItems", new { area = "Admin" })" class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Create New Resume Item
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Title</th>
                        <th>Company/Institution</th>
                        <th>Location</th>
                        <th>Period</th>
                        <th>Order</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @if (item.Type == ResumeItemType.Experience)
                                {
                                    <span class="badge badge-primary">Experience</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Education</span>
                                }
                            </td>
                            <td>@item.Title</td>
                            <td>@item.CompanyOrInstitution</td>
                            <td>@item.Location</td>
                            <td>
                                @if (item.StartDate.HasValue)
                                {
                                    @item.StartDate.Value.ToString("MMM yyyy")
                                }
                                else
                                {
                                    <text>-</text>
                                }
                                - 
                                @if (item.EndDate.HasValue)
                                {
                                    @item.EndDate.Value.ToString("MMM yyyy")
                                }
                                else
                                {
                                    <text>Present</text>
                                }
                            </td>
                            <td>@item.DisplayOrder</td>
                            <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a href="@Url.Action("Details", "ResumeItems", new { area = "Admin", id = item.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "ResumeItems", new { area = "Admin", id = item.Id })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "ResumeItems", new { area = "Admin", id = item.Id })" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No resume items found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

